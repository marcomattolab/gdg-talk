<style is:global>
  *::-webkit-scrollbar {
    width: 16px;
  }

  *::-webkit-scrollbar-track {
    background: #fff;
    padding: 4px;
  }

  *::-webkit-scrollbar-thumb {
    background-color: #e5442f;
    border: 4px solid #fff;
    border-radius: 20px;
  }

  .triangle-down:after {
    content: "";
    display: block;

    position: absolute;
    top: 100%;
    left: calc(50% - 1rem);

    width: 0;
    height: 0;
    border-top: 1rem solid green;
    border-left: 1rem solid transparent;
    border-right: 1rem solid transparent;
  }
</style>
