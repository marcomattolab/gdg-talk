---
import Slide from "../components/Slide.astro";
import Strong from "../components/Strong.astro";

type Props = {
  n: string;
};

const { n } = Astro.props;
---

<Slide n={n}>
  <h1
    class="font-black tracking-tighter text-center mb-8"
    style="font-size:8rem;line-height:0.8"
  >
  Frontend Development with <Strong>Angular</Strong><br />
  </h1>
  <br/>
  <h2 class="font-bold text-2xl text-center text-zinc-400 leading-4">
    Marco Martorana, Senior Software Developer in <strong style="color: red">ELCA<strong>
  </h2>
</Slide>
