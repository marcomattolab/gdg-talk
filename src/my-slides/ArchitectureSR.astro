---
import Slide from "../components/Slide.astro";
import Strong from "../components/Strong.astro";

type Props = {
  n: string;
};

const { n } = Astro.props;
---

<Slide n={n}>
  <p
    class="text-center font-black tracking-tighter text-6xl w-full max-w-[50rem]"
  >
    <Strong>Server</Strong> Rendering <br/>
    <Strong>  Traditional </Strong>  Web Application 
    <p style="font-size: 1.3rem; color:black">UI generated by server ex. with PHP, JSP, JSF ...</p>
    
    <div class="image-container">
      <img src="/imgs/server-rendering.png" class="block mb-20" alt="Server Rendering"/>
  </div>

</Slide>
