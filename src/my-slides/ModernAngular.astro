---
import Slide from "../components/Slide.astro";
import Strong from "../components/Strong.astro";

type Props = {
  n: string;
};

const { n } = Astro.props;
---

<Slide n={n}>
  <h class="text-8xl text-center font-black tracking-tighter">
    Modern <Strong>Angular</Strong> 
  </h>
  <br>
  <img src="/imgs/modern-angular.png" alt="Modern Angular" width="100%">
</Slide>
